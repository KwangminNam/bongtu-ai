{
  "name": "bongtu-ai",
  "version": "0.0.1",
  "private": true,
  "description": "봉투AI - 경조사 내역 관리 및 AI 적정 금액 제안 서비스",
  "scripts": {
    "dev:client": "pnpm --filter @bongtu-ai/client dev",
    "dev:server": "pnpm --filter @bongtu-ai/server start:dev",
    "build:client": "pnpm --filter @bongtu-ai/client build",
    "build:server": "pnpm --filter @bongtu-ai/server build",
    "dev": "pnpm run dev:client & pnpm run dev:server",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "sst:dev": "sst dev",
    "sst:deploy": "pnpm build:server && sst deploy --stage production",
    "sst:remove": "sst remove --stage production"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "devDependencies": {
    "aws-cdk-lib": "^2.237.1",
    "constructs": "^10.4.5",
    "sst": "2"
  }
}
